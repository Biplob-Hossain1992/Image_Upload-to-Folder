@model CRUDOperation.Models.Product


<div class="container">
    <div class="col-md-4">
        <div class="card " style="width:500px">
            <td style="width:60px;">
                @{
                    if (Model.ImageUrl != null)
                    {
                        String img64 = Convert.ToBase64String(Model.ImageUrl);
                        String img64url = string.Format("data:Image/" + Model.ImageUrl + ";base64,{0}", img64);

                        <img class="card-img-top" src="@img64url" alt="Card image" height="150" width="200" />
                    }
                    else
                    {
                        <img class="card-img-top" src="~/img/default.jpg" alt="Card image" height="150" width="200" />
                    }

                }

            </td>
            <div class="card-img-overlay">
                <h4 class="card-title">@Model.Name</h4>
                <p class="card-text">
                    Price : @Model.Price <br>
                    Expiry Date : @Model.ExpireDate<br>
                    Category Id : @Model.CategoryId
                </p>
                <a href="#" class="btn btn-primary">Add To Cart</a>
                <a href="#" id="flip" class="btn btn-primary">Product Details</a>
            </div>
        </div>
    </div>
</div>
<br />
<script src="~/jquery/jquery-3.4.1.min.js"></script>
<script>

    $(document).ready(function () {
        $("#flip").click(function () {
            $("#panel").slideToggle("slow");
        });
    });
</script>
<style>
    #panel, #flip {
        padding: 5px;
        text-align: center;
        /*background-color: #e5eecc;*/
        border: solid 1px #c3c3c3;
    }

    #panel {
        padding: 50px;
        display: none;
    }
</style>

<body>
