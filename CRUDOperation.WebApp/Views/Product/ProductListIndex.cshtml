@{
    Layout = "_PartialLayout";
}


@model ICollection<CRUDOperation.Models.Product>


<div class="container" style="margin-top:70px;">
    <div class="row">
        @foreach (var product in Model)
        {
            <div>
                <div class="col-md-3">
                    <div class="zoom-effect-container">
                        <div class="card shadow" style="width:400px; margin:5px; box-shadow:inset">
                            <td style="width:60px;">
                                @{
                                    if (product.ImagePath != null)
                                    {
                                        String img64 = Convert.ToBase64String(product.ImageUrl);
                                        String img64url = string.Format("data:Image/" + product.ImageUrl + ";base64,{0}", img64);

                                        <img class="card-img-top" src="@img64url" alt="Card image" height="180" width="200" />

                                    }
                                    else
                                    {
                                        <img class="card-img-top" src="~/img/default.jpg" alt="Card image" height="180" width="200" />
                                    }

                                }

                            </td>

                            <div class="card-img-overlay">
                                <h4 class="card-title"><a>Name:</a>@product.Name</h4>
                                <p class="card-text">
                                    <a style="color:coral"><b> ৳  &nbsp; @product.Price </b></a> <br>
                                    Category: @product.Category.Name
                                </p>

                                <a asp-controller="cart" asp-action="buy" asp-route-id="@product.Id" id="divbutton" class="btn btn-primary" style="width:200px">Add To Cart</a>
                                @*<a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary" style="width:100px">Details</a>*@

                            </div>
                        </div>
                    </div> 
                </div>
            </div>
        }
    </div>
</div>


